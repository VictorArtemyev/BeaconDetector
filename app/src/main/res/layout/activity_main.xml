<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".ui.MainActivity">

    <TextView
            android:id="@+id/device_brand_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:text="Device brand: "/>

    <TextView
            android:id="@+id/device_model_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:text="Device model: "/>

    <TextView
            android:id="@+id/android_version_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:text="Android version:"/>

    <TextView
            android:id="@+id/wifi_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:text="Wifi is enable: "/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

        <TextView
                android:id="@+id/beacons_in_range_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="#2196F3"
                android:text="Beacons in rage: "/>

        <TextView
                android:id="@+id/beacon_count_range_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"
                tools:text="10"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

        <TextView
                android:id="@+id/nearest_beacon_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="#2196F3"
                android:text="The nearest beacon: "/>

        <TextView
                android:id="@+id/nearest_beacon_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"
                tools:text="202"/>

    </LinearLayout>

    <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

    <Button
            android:id="@+id/send_log_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_log"/>

</LinearLayout>
